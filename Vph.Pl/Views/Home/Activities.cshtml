@model ActivitiesViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-8">
        @if(Model.IsAuthenticated)
        { 
            <h2>Your Activities:</h2>
        
            foreach (var activity in Model.Activities)
            {
                <div class="row">
                    <p><b>@activity.Name</b></p>
                    <p>@activity.Distance <i>@activity.Start</i></p>
                </div>
            }
        }
        else
        {
            <h2>Not Authenticated</h2>
            <p>Please <a href="~/">return to the home page</a> and authenticate.</p>
        }
    </div>

</div>
